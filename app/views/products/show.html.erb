<section class="product-details">
  <div class="image-container">
    <%= image_tag @product.image, class: "product-card-image" %>
  </div>
  <div class="details-container">
    <div class="product-title">
      <h1><%= @product.name %></h1>
    </div>
    <div class="product-description">
      <p><%= @product.description%> </p>
    </div>
    <div class="product-info">
      <p>Â£<%= @product.price %></p>
      <span class="divider">|</span>
      <p><%= @product.vintage %></p>
      <span class="divider">|</span>
      <p><%= @product.category %></p>
    </div>
    <div class="buttons">
      <%= button_to 'Add to cart', add_to_cart_product_path(@product.id), method: :post, class: "cart-button" %>
      <%= link_to "Buy Now", checkout_path(product_id: @product.id) %>
      <%= link_to 'Add Review', new_product_review_path(@product) %>
      <%= link_to "Back to Wine list", products_path %>
    </div>
  </div>
</section>

