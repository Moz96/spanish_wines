            <%= image_tag 'Villa-Abad-Syrah-Tempranillo.jpg', class: "product-image" %>
          </div>
          <h2><%= link_to product.name, product_path(product) %></h2>
          <p><%= product.description %></p>
          <div class="product-info">
            <p>Â£<%= product.price %></p>
          <span class="divider">|</span>
            <p><%= product.vintage %></p>
            <span class="divider">|</span>
            <p><%= product.category %></p>
          </div>
          <%= button_to 'Add to cart', add_to_cart_product_path(product), method: :post, class: "cart-button" %>
        </div>
    <% end %>
  </div>
</div>
