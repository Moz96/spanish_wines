          <%= image_tag 'Villa-Abad-Syrah-Tempranillo.jpg', class: "product-image" %>
        </div>
        <h2><%= link_to product.name, product_path(product) %></h2>
        <p><%= product.description %></p>
        <p>Â£<%= product.price %></p>
        <p><%= product.vintage %></p>
        <p><%= product.category %></p>
